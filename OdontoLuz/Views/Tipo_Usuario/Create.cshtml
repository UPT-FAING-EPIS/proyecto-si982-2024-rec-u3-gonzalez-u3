@model OdontoLuz.Models.TipoUsuario
@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Nuevo Tipo Usuario</h6>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-sm-3">
                   
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                 
                    @using (Html.BeginForm("Edit", "Tipo_Usuario", FormMethod.Post, new { id = "frm-categoria" }))
                    {
                        @Html.HiddenFor(x => x.Id_TipoUsuario)
                        <div class="card"></div>
                        <div class="card" style="align-content:center">
                            <div class="card-header">Información Tipo Usuario</div>
                            <div class="card-body">
                                <div class="form-group col-sm-6">
                                    @Html.LabelFor(x => x.Descripcion)
                                    @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control", autocomplete = "off" })
                                    @*@Html.ValidationMessageFor(x => x.Descripcion, null, new { @class = "label label-danger" })*@
                                </div>
                            </div>
                            <div class="d-flex justify-content-end col-sm-6">
                                <button type="submit" class="btn btn-primary btn-sm mr-3">Registrar</button>
                                <a href="~/Tipo_Usuario" class="btn btn-danger  btn-sm">Cancelar</a>
                            </div>
                            <br />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
