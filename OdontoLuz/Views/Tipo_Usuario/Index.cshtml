@model List<OdontoLuz.Models.TipoUsuario>
@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Tipo Usuario</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-3">
                    <a href="~/Tipo_Usuario/Create" class="btn btn-success"><i class="fas fa-plus-circle"></i> Nuevo Registro</a>
                    <h2 class="page-linl"></h2>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model)
                            {
                                <tr>
                                    <td>@(m. Id_TipoUsuario)</td>
                                    <td>@(m.Descripcion)</td>
                                    <td>
                                        <a href="~/Tipo_Usuario/Create/@m.Id_TipoUsuario" class="btn btn-primary btn-sm"><i class="fas fa-pencil-alt"></i></a>
                                        <a onclick="return confirm('Esta Seguro que desea eliminar el registro?')" href="~/Tipo_Usuario/Delete/@m.Id_TipoUsuario" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>