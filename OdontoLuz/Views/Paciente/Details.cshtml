@model OdontoLuz.Models.Paciente
@{
    ViewBag.Title = "Details";
    List<OdontoLuz.Models.TipoDocumento> tipodocumento = ViewBag.tipo;
}


<!DOCTYPE html>
<html>
<head>
    <title>Consulta de Identidad</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        /* Estilos para el modal */
        .modal {
            display: none; /* Ocultar el modal por defecto */
            position: fixed; /* Posición fija para que esté siempre en el centro */
            z-index: 1; /* Hacer que el modal esté por encima de todo */
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto; /* Habilitar el desplazamiento si el contenido es demasiado grande */
            background-color: rgba(0,0,0,0.4); /* Fondo semi-transparente */
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto; /* 15% desde arriba y centrado horizontalmente */
            padding: 20px;
            border: 1px solid #888;
            width: 50%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <h2>Consulta de Identidad</h2>
    <select id="tipoDocumento">
        <option value="dni">DNI</option>
        <option value="pasaporte">Pasaporte</option>
        <option value="carnet">Carnet de Identidad</option>
    </select>
    <br>
    <input type="text" id="dniInput" placeholder="Ingrese su documento" pattern="\d{8}" title="Ingrese 8 dígitos numéricos" maxlength="8">
    <br>
    <label>Nombres:</label> <input type="text" id="nombres" disabled><br>
    <label>Apellidos:</label> <input type="text" id="apellidos" disabled>
 Modal para mostrar el mensaje 
<div id="myModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <p id="modalMessage"></p>
    </div>
</div>
<script>
        // Obtener el modal
        var modal = document.getElementById("myModal");
        // Obtener el botón para cerrar el modal
        var span = document.getElementsByClassName("close")[0];

        // Función para cerrar el modal haciendo clic en la "x"
        span.onclick = function() {
            modal.style.display = "none";
        }

        // Función para cerrar el modal haciendo clic fuera del modal
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        // Definir función para habilitar o deshabilitar las cajas de texto según el tipo de documento
        function controlarCajasTexto() {
            var tipoDocumento = document.getElementById('tipoDocumento').value;
            if (tipoDocumento === 'dni') {
                // Si es DNI, deshabilitar las cajas de texto de nombres y apellidos
                document.getElementById('nombres').disabled = true;
                document.getElementById('apellidos').disabled = true;
            } else {
                // Si no es DNI, habilitar las cajas de texto de nombres y apellidos
                document.getElementById('nombres').disabled = false;
                document.getElementById('apellidos').disabled = false;
            }
        }

        // Definir función para consultar el documento
        function consultarDocumento() {
            var tipoDocumento = document.getElementById('tipoDocumento').value;
            var documento = document.getElementById('dniInput').value;
            if (tipoDocumento === 'dni') {
                // Verificar si el documento tiene exactamente 8 dígitos
                if (documento.length === 8 && /^\d+$/.test(documento)) {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("ConsultarDNI", "Paciente")',
                        data: { dni: documento },
                        success: function (response) {
                            if (response.busqueda === 1) {
                                document.getElementById('nombres').value = response.nombres;
                                document.getElementById('apellidos').value = response.ape_paterno + ' ' + response.ape_materno;
                            } else {
                                // Limpiar los campos
                                document.getElementById('nombres').value = '';
                                document.getElementById('apellidos').value = '';
                                // Mostrar modal con el mensaje
                                document.getElementById('modalMessage').innerText = "El DNI ingresado no es válido o no existe.";
                                modal.style.display = "block";
                                // Limpiar la caja de texto del DNI después de mostrar el mensaje
                                document.getElementById('dniInput').value = '';
                            }
                        },
                        error: function (error) {
                            console.log(error);
                            alert('Error al consultar el documento');
                        }
                    });
                }
            }
        }

        // Agregar evento input a la caja de texto para llamar a la función consultarDocumento()
        document.getElementById('dniInput').addEventListener('input', consultarDocumento);
        // Agregar evento change al select para llamar a la función controlarCajasTexto()
        document.getElementById('tipoDocumento').addEventListener('change', controlarCajasTexto);

        // Llamar a controlarCajasTexto() para asegurarse de que el estado inicial sea correcto
        controlarCajasTexto();
    </script>
    </body>
    </html>


