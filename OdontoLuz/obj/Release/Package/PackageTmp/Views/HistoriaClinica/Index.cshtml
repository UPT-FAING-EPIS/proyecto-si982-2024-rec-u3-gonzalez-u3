@model List<OdontoLuz.Models.HistoriaClinica>
@{
    var codigo = ViewBag.otrousuario;
    if (codigo == 1)
    {
        ViewBag.Title = "Index";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout2.cshtml";
    }
}

<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Lista de Historias Clinicas</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-3">
                    <a href="~/HistoriaClinica/Create" class="btn btn-success"><i class="fas fa-plus-circle"></i> Nuevo Historia</a>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>   
                                <th>Nro. Historia</th>
                                <th>Nro.Documento</th>
                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Dirección</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ 
                                var id = 1;
                            }
                            @foreach (var x in Model)
                            {                                
                                <tr>
                                    <td>@(id++)</td>                         
                                    <td>@(x.CodigoHistoria)</td>
                                    <td>@(x.Paciente.NroDocumento)</td>
                                    <td>@(x.Paciente.Nombres)</td>
                                    <td>@(x.Paciente.Apellidos)</td>
                                    <td>@(x.Paciente.Domicilio)</td>
                                    <td>
                                        <a href="~/HistoriaClinica/Create/@x.Id_HistoriaClinica" class="btn btn-primary btn-sm disabled"  ><i class="fas fa-pencil-alt"></i></a>
                                        <button class="btn btn-warning btn-sm"><i class="fas fa-info-circle"></i></button>
                                        <a onclick="return confirm('Esta Seguro que desea eliminar el registro?')" href="~/HistoriaClinica/Delete/@x.Id_HistoriaClinica" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

