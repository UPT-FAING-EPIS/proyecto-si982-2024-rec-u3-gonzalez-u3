@model List<OdontoLuz.Models.Usuario>
@{
    ViewBag.Title = "Index";
    List<OdontoLuz.Models.TipoUsuario> tipousuario = ViewBag.tipo;
}
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Lista de Usuarios</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-3">
                    <a href="~/Usuario/Create" class="btn btn-success"><i class="fas fa-user-plus"></i> Nuevo Usuario</a>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Telefono</th>
                                <th>Correo</th>
                                <th>Tipo Usuario</th>
                                <th>Nombre Usuario</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td>@(x.Id_Usuario)</td>
                                    <td>@(x.Nombres)</td>
                                    <td>@(x.Apellidos)</td>
                                    <td>@(x.Telefono)</td>
                                    <td>@(x.CorreoElectronico)</td>
                                    <td>@(x.TipoUsuario.Descripcion)</td>
                                    <td>@(x.NombreUsuario)</td>
                                    @if (x.Estado == "1")
                                    {
                                        <td> <span class="badge badge-info">Activo</span></td>
                                    }
                                    else
                                    {
                                        <td><span class="badge badge-danger">No Activo</span></td>
                                    }

                                <td>
                                    <a href="~/Usuario/Create/@x.Id_Usuario" class="btn btn-primary btn-sm"><i class="fas fa-pencil-alt"></i></a>
                                    <button class="btn btn-warning btn-sm"><i class="fas fa-info-circle"></i></button>
                                    <a onclick="return confirm('Esta Seguro que desea eliminar el registro?')" href="~/Usuario/Delete/@x.Id_Usuario" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a>
                                </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


